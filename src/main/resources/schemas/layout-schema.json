{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "title",
        "imageUrl"
    ],
    "properties": {
        "title": {
            "type": "string"
        },
        "imageUrl": {
            "type": "string"
        },
        "rooms": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "id"
                        ],
                        "properties": {
                            "id": {
                                "type": "integer"
                            }
                        }
                    }
                ]
            }
        }
    }
}