{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "title",
        "pricePerDay",
        "capacity",
        "pricePerHour",
        "bookings",
        "imageUrl",
        "status"
    ],
    "properties": {
        "title": {
            "type": "string"
        },
        "pricePerDay": {
            "type": "integer"
        },
        "capacity": {
            "type": "integer"
        },
        "pricePerHour": {
            "type": "integer"
        },
        "bookings": {
            "type": "integer"
        },
        "imageUrl": {
            "type": "string"
        },
        "status": {
            "type": "boolean"
        },
        "roomLayouts": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "layoutId"
                        ],
                        "properties": {
                            "layoutId": {
                                "type": "integer"
                            }
                        }
                    }
                ]
            }
        }
    }
}