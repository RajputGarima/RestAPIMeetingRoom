{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "email",
        "title",
        "name",
        "phoneNumber",
        "notes",
        "company",
        "address",
        "paymentMethod"
    ],
    "properties": {
        "email": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "phoneNumber": {
            "type": "integer"
        },
        "notes": {
            "type": "string"
        },
        "company": {
            "type": "string"
        },
        "address": {
            "type": "object",
            "required": [
                "address",
                "city",
                "state",
                "zip",
                "country"
            ],
            "properties": {
                "address": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "state": {
                    "type": "string"
                },
                "zip": {
                    "type": "integer"
                },
                "country": {
                    "type": "string"
                }
            }
        },
        "paymentMethod": {
            "type": "string"
        }
    }
}